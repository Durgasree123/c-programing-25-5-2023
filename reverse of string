#include <stdio.h>  
#include <string.h>  
int main()  
{  
    char str[40]; // declare the size of character string  
    printf (" \n Enter a string : ");  
    scanf ("%s", str);  
      
    // use strrev() function to reverse a string  
    printf (" \n Reverse the string: %s ", strrev(str));  
    return 0;  
}  
